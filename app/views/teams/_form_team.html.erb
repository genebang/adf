<div class="player_list">

  <table class = "player_table">
    <thead>
      <td> </td>
      <td class="player_text" id="player_name">Player Name</td>
      <td class="player_text">Pos</td>
      <td class="player_text">Team</td>
      <td class="player_text">Pts</td>
    </thead>

    <% @athletes.each do |athlete| %>
    <tr class="position_<%=athlete.position%>" id="players">
      <td>
      </td>
      <td id="player_<%=athlete.id%>" class="player_text" target="full_name">
        <%= athlete.full_name %>
      </td>
      <td class="player_text">
        <%= athlete.position %>
      </td>
      <td class="player_text">
        <% unless athlete.professional_team.nil? %>
          <%= athlete.professional_team.short_name.upcase %>
        <% end %>
      </td>
      <td class="player_text" id="pts" target="<%=athlete.season_average.points%>">
        <%=athlete.season_average.points%>
      </td>

    </tr>
    <% end %>

  </table>

</div>
