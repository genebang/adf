
<div class="container centered">

  <h2>Edit </h2>
  <h4><%= link_to "your matchup", game_path(@team.game)%></h4>
<div class="row">
  <div class="span7 athletes">
    <%=@team.calculate_fantasy_points%>
    <h3><%= @team.name %></h3>
      <% @team.athletes.each do |athlete| %>
        <%= render :partial => 'athletes/athlete_pic', :locals => {:athlete => athlete} %>
      <% end %>
  </div>

  <div class="span3">
    <%= render 'athletes_list', :athletes => @athletes %>
  </div>
</div>
</div>