<%= form_for [current_user, @team] do |f| %>
<select id = "position_list" xonchange="positionChange(this)">
  <option value="PG">Point Guard</option>
  <option value="C">Center</option>
  <option value="PF">Power Forward</option>
  <option value="SF">Small Forward</option>
  <option value="SG">Shooting Guard</option>
</select>
<div class="player_list">
    <table class = "player_table">
      <% @athletes.each do |athlete| %>
      <tr class="position_<%=athlete.position%>">
        <td>
          <%= fields_for "athlete_ids[]", athlete do |athlete_fields| %>
            <%= athlete_fields.check_box [], { :checked => false }, athlete.id, nil %>
          <% end %>
        </td>
        <td id="player_<%=athlete.id%>" class="player_text">
          <%= athlete.last_name %>,
          <%= athlete.first_name %>
        </td>
        <td class="player_text">
          <%= athlete.position %>
        </td>
        <td class="player_text">
          <%= athlete.professional_team %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
  <%= f.submit "Update Roster"%>
<% end %>