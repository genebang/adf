<% unless @game.full? %>
  <%= form_for @game do |game_form| %>
    <%= @game.teams.first.name %>
    vs
    <%= game_form.fields_for :teams, @new_team do |f| %>
      <%= f.text_field :name %>
      <%= f.hidden_field :user_id, :value => current_user.id %>

      <%= render 'teams/form_team', :f => f %>
    <%end%>

    <%= game_form.submit "Join Game" %>
  <%end%>
<%end%>


