
<div href="#" class="player_card" id="athlete_<%= athlete.id %>">
  <div class="name"><%= athlete.first_name %> <%= athlete.last_name %></div>
  <img src="http://i.cdn.turner.com/nba/nba/media/act_<%= athlete.url_name%>.jpg">
  <div class="name"><%= athlete.full_name %></div>
  <div class="stats"><%= athlete.season_average.points %>ppg
                     <%= athlete.season_average.rebounds %>rpg
                     <%= athlete.season_average.assists %>apg</div>
  <div class='delete_button card-position_<%=athlete.position%>'>
  <%= link_to '', team_athlete_path(@team, athlete) , class: 'btn-mini icon-remove remove-athlete', method: :delete, :remote => true %>

  </div>
</div>
